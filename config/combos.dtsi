compatible = "zmk,combos";

#define COMBO(NAME, BINDINGS, KEYPOS, TERM) \
  combo_##NAME { \
    timeout-ms = <TERM>; \
    bindings = <BINDINGS>; \
    key-positions = <KEYPOS>; \
//    layers = <LAYERS>; \
  };

// COMBO(xxx, &kp XXX, # #, QWR, 40)
// xxx = combo name
// XXX = keyode to produce
// # # = combo bindings
// QWR = layer note: ignore layer for now 
// 40 = timeout

// Big keys
COMBO(esc, &kp ESC,  3  4, 40)
COMBO(tab, &kp TAB, 15 16, 40)
COMBO(ret, &kp RET, 19 20, 40)

// Brackets 
COMBO(left_par,  &kp LPAR, 4 5, 40)
COMBO(right_par, &kp RPAR, 5 6, 40)

//Punctuation
COMBO(quote,  &kp SQT, 18 19, 40)

