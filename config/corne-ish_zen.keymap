#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

#define NUMBER_L 1
#define SYMBOL_L 2
#define EXTRA_L  3

/ {
    combos {
        compatible = "zmk,combos";
        combo_enter {
            timeout-ms = <50>;
            key-positions = <23 24>;
            bindings = <&kp ENTER>;
        };
    };
};
/ {
        keymap {
                compatible = "zmk,keymap";

                default_layer {
                        label = "QWERTY";
// -----------------------------------------------------------------------------------------
// |  ESC |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | TAB |
// | CTRL |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  '   |
// | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | SHFT  |
//                    | GUI | ALT | LOWER(1)/SPC |   | BSPC | OSL(2)  | ENT |
                        bindings = <
   &kp ESC   &kp Q &kp W &kp E &kp R &kp T   &kp Y &kp U  &kp I     &kp O   &kp P    &kp TAB
   &kp LCTRL &kp A &kp S &kp D &kp F &kp G   &kp H &kp J  &kp K     &kp L   &kp SEMI &kp SQT
   &kp LSHFT &kp Z &kp X &kp C &kp V &kp B   &kp N &kp M  &kp COMMA &kp DOT &kp FSLH &kp LSHFT
                  &kp LGUI &kp LALT &lt 1 SPACE   &kp BSPC &sl 2 &kp ENTER
                        >;
                };
                number_layer {
                        label = "NUMBER";
// -----------------------------------------------------------------------------------------
// |  TAB |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | TILDE |
// | SHFT |     | CTRL| ALT | GUI |     |   | LFT | DWN |  UP | RGT | PGUP| HOME  |
// | SHFT |  Z  |  X  |  C  |  V  |     |   |     |     |     |     | PGDN| END   |
//                    |     |     |     |   | BSPC| GUI | DEL |
                        bindings = <
   &kp TAB   &kp N1 &kp N2    &kp N3   &kp N4   &kp N5  &kp N6   &kp N7   &kp N8 &kp N9    &kp N0 &kp TILDE
   &kp LSHFT &trans &kp LCTRL &kp LALT &kp LGUI &trans  &kp LEFT &kp DOWN &kp UP &kp RIGHT &kp PG_UP &kp HOME 
	&kp LSHFT &kp Z  &kp X		&kp C		&kp V	   &trans  &trans   &trans &trans    &kp PG_DN &kp END
                          	        &trans &trans &trans &kp BSPC &kp LGUI &kp DEL
                        >;
                };

                symbol_layer {
                        label = "SYMBOL";
// -----------------------------------------------------------------------------------------
// |  TAB |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | BKSP |
// | CTRL |     |     |     |     |     |   |  -  |  =  |  [  |  ]  |  \  |  `   |
// | SHFT |     |  F2 | F5  |     |     |   |  _  |  +  |  {  |  }  | "|" |  ~   |
//                    | GUI | LAY3| SPC |   | ENT |     | ALT |
                        bindings = <
   &kp  TAB  &kp EXCL &kp AT &kp HASH &kp DLLR &kp PRCNT   &kp CARET &kp AMPS  &kp KP_MULTIPLY &kp LPAR &kp RPAR &kp BSPC
   &kp LCTRL &trans   &trans &trans   &trans   &trans      &kp MINUS &kp EQUAL &kp LBKT        &kp RBKT &kp BSLH &kp GRAVE
   &kp LSHFT &trans   &kp F2 &kp F5   &trans   &trans      &kp UNDER &kp PLUS  &kp LBRC        &kp RBRC &kp PIPE &kp TILDE
                    	     &kp LGUI &mo 3   &kp SPACE   &kp RET   &trans    &kp RALT
                        >;
                };

        extra_layer {
            label = "EXTRA";
// -----------------------------------------------------------------------------------------
// |  TAB |     |     |     |     |     |   |     | VOL-|VOL+ |     |     |      |
// | CTRL |     |     |     |     |     |   |     |     |     |     |     |      |
// | BTCLR| BT1 | BT2 | BT3 | BT4 | BT5 |   |     |     |     |     |     |       |
//                    | GUI |     | SPC |   | ENT |     | ALT |
								bindings = <
   &trans    &trans     &trans      &trans          &trans       &trans           &kp C_PREV     &kp C_VOL_DN &kp C_VOL_UP &kp C_NEXT &trans &trans
   &trans    &trans     &trans      &trans          &trans       &trans           &trans     &kp K_MUTE   &trans &trans &trans &trans
   &bt BT_CLR &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &bt BT_SEL 4    &kp C_BRI_UP       &kp C_BRI_DN   &trans &trans &trans &trans
                                                  &trans          &trans       &kp ESC          &kp DEL
            >;
        };
        };
};
